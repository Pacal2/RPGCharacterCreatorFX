<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.CharacterCreationGenderController">

    <children>
        <VBox layoutX="380.0" layoutY="126.0" prefHeight="459.0" prefWidth="436.0">
            <children>
                <Label alignment="CENTER" prefHeight="87.0" prefWidth="697.0" text="Płeć:" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="48.0" />
                    </font>
                </Label>
                <HBox prefHeight="200.0" prefWidth="441.0">
               <ToggleButton fx:id="maleChoiceButton" mnemonicParsing="false" onAction="#genderButtonPushed" prefHeight="200.0" prefWidth="220.0" text="Male">
                  <font>
                     <Font name="System Bold" size="36.0" />
                  </font>
               </ToggleButton>
               <ToggleButton fx:id="femaleChoiceButton" mnemonicParsing="false" onAction="#genderButtonPushed" prefHeight="200.0" prefWidth="220.0" text="Female">
                  <font>
                     <Font name="System Bold" size="36.0" />
                  </font>
               </ToggleButton>
                </HBox>
            </children>
        </VBox>
        <Button fx:id="nextButton" layoutX="1063.0" layoutY="709.0" mnemonicParsing="false" onAction="#nextButtonPushed" text="Next">
            <font>
                <Font size="36.0" />
            </font>
        </Button>
    </children>

</AnchorPane>
